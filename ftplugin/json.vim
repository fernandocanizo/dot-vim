" use spaces when TAB is pressed
set expandtab

" number of spaces to show for a TAB
set tabstop=2

" number of spaces when indenting with >>
set shiftwidth=2

" number of spaces for a tab in editing operations
set softtabstop=2

set textwidth=0

set smartindent

set nowrap
set smartcase

" Disable JSON concealing from Vim
set concealcursor=nc
set conceallevel=0

colorscheme conanperlgray

" highlight unwanted spaces
call SpaceHighlightor()
